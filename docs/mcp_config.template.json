{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/path/to/allowed/dir",
        "/path/to/other/allowed/dir"
      ],
      "env": {
        "ALLOWED_DIRS": "/path/to/allowed/dir:/path/to/other/allowed/dir"
      }
    }
  }
}