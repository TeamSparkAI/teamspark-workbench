{
  "name": "llm-chat-app",
  "version": "1.0.0",
  "description": "Multi-LLM Chat Application",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "start": "npm run build && electron . --ignore-certificate-errors",
    "cli": "npm run build && node dist/main.js --cli",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.renderer.json && tsc -p tsconfig.preload.json",
    "watch": "tsc -w -p tsconfig.json & tsc -w -p tsconfig.renderer.json"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.18.0",
    "@google/generative-ai": "^0.1.0",
    "dotenv": "^16.4.7",
    "openai": "^4.0.0"
  }
}
