{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/renderer.ts", "src/types/preload.d.ts"],
  "exclude": ["node_modules"]
} 